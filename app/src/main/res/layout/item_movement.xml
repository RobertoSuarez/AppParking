<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtPlateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="?attr/colorPrimary"
            android:text="ABC-223" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtModelCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorSecondary"
                android:layout_weight="1"
                android:text="FORD 150" />

            <TextView
                android:id="@+id/txtCardYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSecondaryFixed"
                android:layout_weight="1"
                android:text="2018" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtDateHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="?attr/colorPrimary"
            android:text="19:41" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_weight="1"
            android:text="02/03/2024" />


    </LinearLayout>

</LinearLayout>